<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="7dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/corPrimaria">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:src="@drawable/person_quatro"
            android:id="@+id/imgModeloAvatarAgenda"
            android:background="@color/corTercearia"
            android:layout_margin="5dp"/>
        <View
            android:layout_width="5dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@color/corTercearia"/>
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/txtModeloAgendaNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/corSecundaria"
                android:text="Nome: Hugo"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/txtModeloAgendaValor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/corSecundaria"
                android:layout_margin="5dp"
                android:text="Valor: R$70,00"
                android:textSize="15sp"/>


        </LinearLayout>
        <View
            android:layout_width="5dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:background="@color/corTercearia"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_margin="5dp">


            <TextView
                android:id="@+id/txtModeloAgendaDia"
                android:layout_width="wrap_content"
                android:textColor="@color/corSecundaria"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Dia: 22/10/2025"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/txtModeloAgendaHora"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:textColor="@color/corSecundaria"
                android:layout_height="wrap_content"
                android:text="Hora: 16:00"
                android:textSize="15sp"/>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>