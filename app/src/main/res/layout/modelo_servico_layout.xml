<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="200dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fundo_modelo"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: "
                android:layout_gravity="center"
                android:textColor="@color/corSecundaria"
                android:textSize="24sp"
                android:fontFamily="@font/font_permanent_marker_regular"
                />
            <TextView
                android:id="@+id/txtNomeServico"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Teste"
                android:fontFamily="@font/font_permanent_marker_regular"
                android:textColor="@color/corSecundaria"
                android:textSize="24sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempo Estimado: "
                android:layout_gravity="center"
                android:fontFamily="@font/font_permanent_marker_regular"
                android:textColor="@color/corSecundaria"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/txtTempoEstServico"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_permanent_marker_regular"
                android:text="30min"
                android:textColor="@color/corSecundaria"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_permanent_marker_regular"
                android:text="Valor: "
                android:layout_gravity="center"
                android:textColor="@color/corSecundaria"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/txtValorServico"
                android:layout_width="250dp"
                android:fontFamily="@font/font_permanent_marker_regular"
                android:layout_height="wrap_content"
                android:text="30,00"
                android:textColor="@color/corSecundaria"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>